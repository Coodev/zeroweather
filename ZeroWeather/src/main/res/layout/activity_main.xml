<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activityMain_navigationDrawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activityMain_contentFrame"/>

    <!-- The navigation drawer -->
    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/standard_backgroundColor_layout"
        android:orientation="vertical"
        android:id="@+id/activityMain_navigationFrame">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:choiceMode="singleChoice"
            android:id="@+id/activityMain_navigationList_listView" />

    </FrameLayout>



</android.support.v4.widget.DrawerLayout>